# ============================================================================
# TELE-GOOGLE ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================================================
# TELEGRAM CONFIGURATION
# ============================================================================
# Get your API credentials from https://my.telegram.org/apps
# You need to create an application to get api_id and api_hash

TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+998901234567

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
# Get your API key from https://platform.openai.com/api-keys

OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# POSTGRESQL CONFIGURATION
# ============================================================================
# PostgreSQL will run in Docker container

DB_HOST=localhost
DB_PORT=5433
DB_NAME=tele_google
DB_USER=postgres
DB_PASSWORD=postgres

# ============================================================================
# BOT CONFIGURATION
# ============================================================================
# Get your bot token from @BotFather on Telegram
# 1. Chat with @BotFather
# 2. Send /newbot
# 3. Follow instructions to create bot
# 4. Copy the token provided

BOT_TOKEN=your_bot_token_from_botfather

# Admin User IDs (comma-separated list of Telegram user IDs with admin access)
# Get your user ID by messaging @userinfobot on Telegram
# Example: BOT_ADMIN_USER_IDS=[123456789,987654321]
# NOTE: Must be a JSON array format (with square brackets)
BOT_ADMIN_USER_IDS=[123456789]

# ============================================================================
# MONITORING CHANNELS
# ============================================================================
# Channels are managed through channels.txt file or via bot commands (/addchannel)
# No configuration needed here

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
