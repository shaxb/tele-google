# Tele-Google environment configuration
# Copy to .env and fill in real values. Never commit .env!

# Telegram — https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+998901234567

# OpenAI — https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# PostgreSQL (runs in Docker, see docker-compose.yml)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=tele_google
DB_USER=postgres
DB_PASSWORD=postgres

# Bot — get token from @BotFather, user IDs from @userinfobot
BOT_TOKEN=your_bot_token_from_botfather
BOT_ADMIN_USER_IDS=[123456789]

# Log channel — create a private channel, add the bot as admin, get ID via @userinfobot
# BOT_LOG_CHANNEL_ID=-100xxxxxxxxxx
