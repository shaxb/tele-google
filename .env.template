# ============================================================================
# TELE-GOOGLE ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================================================
# TELEGRAM CONFIGURATION
# ============================================================================
# Get your API credentials from https://my.telegram.org/apps
# You need to create an application to get api_id and api_hash

TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+998901234567

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
# Get your API key from https://platform.openai.com/api-keys

OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# MEILISEARCH CONFIGURATION
# ============================================================================
# Meilisearch will run in Docker container

MEILI_HOST=http://localhost:7700
MEILI_MASTER_KEY=masterKey
MEILI_INDEX=marketplace

# ============================================================================
# POSTGRESQL CONFIGURATION
# ============================================================================
# PostgreSQL will run in Docker container

DB_HOST=localhost
DB_PORT=5433
DB_NAME=tele_google
DB_USER=postgres
DB_PASSWORD=postgres

# ============================================================================
# BOT CONFIGURATION
# ============================================================================
# Get your bot token from @BotFather on Telegram
# 1. Chat with @BotFather
# 2. Send /newbot
# 3. Follow instructions to create bot
# 4. Copy the token provided

BOT_TOKEN=your_bot_token_from_botfather

# ============================================================================
# MONITORING CHANNELS
# ============================================================================
# Comma-separated list of Telegram channels to monitor
# Format: @channelname1,@channelname2,@channelname3
# Example: @MalikaBozor,@ToshkentMarket,@UzbekBozor

CHANNELS=@MalikaBozor,@ToshkentMarket

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum number of results per search
MAX_RESULTS=10

# AI confidence threshold (0.0 to 1.0)
# Messages with lower confidence will be logged for review
AI_CONFIDENCE_THRESHOLD=0.7

# Image download settings
DOWNLOAD_IMAGES=true
MAX_IMAGE_SIZE_MB=10

# Rate limiting (messages per minute)
MAX_MESSAGES_PER_MINUTE=60
